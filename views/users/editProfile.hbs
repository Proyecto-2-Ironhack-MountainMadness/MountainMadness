<div class="main-img">
  <div style="background: url(https://i.postimg.cc/3N7wnb75/background.jpg)" class="bg-profile jumbotron text-white">
    <div class="container py-5 text-center">

      <h1 class="display-4 font-weight-bold">Bienvenido a tu perfil<br> {{currentUser.nickName}}</h1>
      </p>
      <div class="image-div-flex ">
        <div class="profile-img mx-auto" data-image="{{currentUser.imgProfile}}"
          style="background:url('{{currentUser.imgProfile}}') " alt="Profile Picture">
        </div>
      </div>
    </div>

  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-6">
      <p class="espace-user text-center">👤 Nombre de Usuario: </p>
      <p class="espace-user text-center">📱 Numero de Telefono: </p>
      <p class="espace-user text-center">🗺️ País: </p>
      <p class="espace-user text-center">📅 Fecha de Nacimiento: </p>
      <p class="espace-user text-center">🖊️ Sobre mi: </p>
    </div>
    <form method="POST" action="/users/editProfile">
      <div class="col-12">
        <input type="text" name="nickName" class="form-control" id="inputNickname" value="{{currentUser.nickName}}"
          placeholder="{{currentUser.nickName}}"> 
        <input type="number" name="phone" class="form-control" id="phone" value="{{currentUser.phone}}"
          placeholder="{{currentUser.phone}}">
        <input type="text" name="country" class="form-control" id="country" value="{{currentUser.country}}"
          placeholder="{{currentUser.country}}">
          <br>
        <input type="date" name="birth" class="form-control" id="birth" value="{{currentUser.birth}}"
          placeholder="{{currentUser.birth}}">
        <textarea name="aboutMe" class="form-control" id="aboutMe" value="{{currentUser.aboutMe}}"
          placeholder="{{currentUser.aboutMe}}" class="form-control {{#if errors.description}}is-invalid{{/if}}"
          id="description">{{track.description}}</textarea>

        {{!-- <input type="text" name="aboutMe" class="form-control" id="aboutMe" value="{{currentUser.aboutMe}}" --}}
          {{!-- placeholder="{{currentUser.aboutMe}}"> --}}

      </div>
  </div>
</div>
</div>

<div>
  <div class="d-grid gap-2 col-6 mx-auto">
    <button class=" btn-save btn btn-primary btn-block p-3 mt-5 btn-naturet nt-f" type="submit">Save Changes <span
        class="fa fa-check nt-w ml-2"></span></button>

  </div>
</div>
</form>