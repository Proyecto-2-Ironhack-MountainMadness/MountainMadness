      <div class="col">
        <h1>Compra y vende <span>lo que ya no necesites</span></h1>
      </div>

      <div class="col">
        <img class="home-img" src="/img/home.png" alt="home">
      </div>
    </div>
    <div class="row row-cols-3 row-cols-md-4 g-4">
      {{#each products as |productData|}}
      {{>product productData}}
      {{/each}}
    </div>
  </div>
</div>