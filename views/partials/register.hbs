<div class="container signup-register-container" id="signup-display">
  <div class="card-home rounded" style=" height: 26rem;">
    <button type="button" class="close" aria-label="Close" id="hide-sign-close-icon">
      <span class="close-icon text-white"><i class="fa fa-times"></i></span>
    </button>
    <br />
    <form class="pt-5 pl-1 pr-1 w-100" action="/users/register" method="POST">
      <div class="mb-3 row">
        <label for="inputEmail" style="font" class="col-sm-3 col-form-label text-white">Email</label>
        <div class="col-sm-8">
          <input type="email" name="email" value="{{user.email}}"
            class="form-control {{#if errors.email}}is-invalid{{/if}}" id="email" required>
          <div class="form-text text-white">No compartiremos tu email con terceros</div>
        </div>
        {{#if errors.email}}
        <div class="invalid-feedback">
          {{errors.email}}
        </div>
        {{/if}}
      </div>
      <div class="mb-1 row pb-5">
        <label for="inputPassword" class="col-sm-3 col-form-label text-white">Password</label>
        <div class="col-sm-8">
          <input type="password" name="password" class="form-control {{#if errors.password}}is-invalid{{/if}}"
            id="password" required>
        </div>
      </div>
      <div class="mb-1 row pb-2">
        <label for="repeatPassword" class="col-sm-3 col-form-label text-white">Repite tu contrase√±a</label>
        <div class="col-sm-8">
          <input type="password" name="repeatPassword" class="form-control" id="repeatPassword" required>
        </div>
      </div>
      <div class="mb-6 mt-3 row">
        <button type="submit" class="btn btn-primary form-button-sign mg-3">Submit</button>
      </div>
    </form>
  </div>
</div>